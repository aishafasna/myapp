<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp">

        </android.support.v7.widget.AppCompatImageView>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="name"
                android:inputType="text"
                android:maxLines="1"
                 />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutphoneno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextphoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="phoneno"
                android:inputType="text"
                android:maxLines="1"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="email"
                android:inputType="textPassword"
                android:maxLines="1"
                 />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutcollege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextcollege"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="college"
                android:inputType="textPassword"
                android:maxLines="1"
                 />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutsource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextsource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="source"
                android:inputType=""
                android:maxLines="1"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutcourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textInputEditTextcource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="course"
            android:inputType="textPassword"
            android:maxLines="1"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textInputEditTextstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="status"
            android:inputType="textPassword"
            android:maxLines="1"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutreg_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textInputEditTextreg_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="reg_date"
            android:inputType="textPassword"
            android:maxLines="1" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutcomment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textInputEditTextcomment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="comment"
            android:inputType="textPassword"
            android:maxLines="1"
             />


        <Button
            android:layout_width="wrap_content"
            android:text="invoke"
            android:id="@+id/btn1"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />


    </android.support.v7.widget.LinearLayoutCompat>


</android.support.v4.widget.NestedScrollView>